{
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 6,        
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true
        }
    },
    "rules": {
        "quotes": ["error", "double"],
        "max-len": ["error", 
            { 
                "code": 120, 
                "ignoreUrls": true, 
                "ignoreStrings": true,
                "ignoreComments": true,
                "ignoreTemplateLiterals": true
            }
        ]
    },
    "plugins": [
        "react"
    ],
    "extends": "airbnb"
}